{% extends "layout.html.jinja" %}

{% block page_header %}{{ user.name }}{% endblock %}

{% block content %}

<a href="mailto:{{ user.email }}">{{ user.email }}</a>

{% if user.user_id != current_user.user_id %}
<br>
<a href="{{ url_for('users.edit_user_permissions', user_id=user.user_id) }}">{%- if not user.is_admin -%}Grant{%- else -%}Revoke{%- endif %} Admin Permissions</a>
{% endif %}

<hr>

<p style="margin-top:20px;"><a href="{{ url_for('users.list_users') }}"><span class="glyphicon glyphicon-chevron-left"></span>All Users</a></p>

{% endblock %}
