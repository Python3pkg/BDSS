<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <title>{% block title %}BDSS{% endblock %}</title>

    {% block head %}
    {% endblock %}
</head>
<body>

    {% block header %}
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ url_for('routes.index') }}">BDSS</a>
                </div>
            </div>
        </div>
    {% endblock %}

    <div class="container" style="margin-top:50px;padding-bottom:30px;">

        {% block flash_messages %}
            <div style="margin-top:5px;margin-bottom:-25px;">
                {% with messages = get_flashed_messages(with_categories=true) %}
                    {% if messages %}
                        {% for category, message in messages %}
                            <div class="alert alert-{{ category or info }} alert-dismissable" role="alert" style="margin-bottom:0;padding:10px;">
                                <button aria-label="Close" class="close" data-dismiss="alert" style="right:0;" type="button"><span aria-hidden="true">&times;</span></button>
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endif %}
                {% endwith %}
            </div>
        {% endblock %}

        <h3 class="page-header">{% block page_header %}BDSS{% endblock %}</h3>

        <div id="page-content">
            {% block content %}
            {% endblock %}
        </div>
    </div>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    {% block scripts %}
    {% endblock %}

</body>
</html>
