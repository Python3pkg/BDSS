{% extends "authenticated.html.jinja" %}
{% import "form_macros.html.jinja" as form_macros %}

{% block page_header %}Edit {{ data_source.label }}{% endblock %}

{% block content %}

{{ form_macros.render_form(form, action_url=url_for("routes.edit_data_source", source_id=data_source.id), btn_class="btn btn-primary") }}

<hr>

<a href="{{ url_for('routes.show_data_source', source_id=data_source.id) }}" class="btn btn-default">Cancel</a>

{% endblock %}

{% block scripts %}

<script>
$('#transfer_mechanism_type').on('change', function(e) {

    var select = $(this);
    var module = select.val();

    $.ajax({
        url: "{{ url_for('routes.show_transfer_mechanism_options_form') }}",
        data: {
            "transfer_mechanism_type": module
        },
        dataType: "text",
        success: function(data) {
            var fieldset = $(data).find("fieldset");
            var group = select.closest(".form-group");
            group.next("fieldset").remove();
            fieldset.insertAfter(group);
        },
        error: function(err) {
            console.warn(err);
        }
    });

});
</script>

{% endblock %}
