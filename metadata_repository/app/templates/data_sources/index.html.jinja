{% extends "authenticated.html.jinja" %}

{% block page_header %}Data Sources{% endblock %}

{% block content %}

{% if data_sources|length > 0 %}
    <ul>
        {% for data_source in data_sources %}
            <li>
                <a href="{{ url_for('routes.show_data_source', source_id=data_source.id) }}">{{ data_source.label }}</a>
            </li>
        {% endfor %}
    </ul>

    {% if total_num_pages > 1 %}
        <nav style="text-align:center;">
            <ul class="pagination">
                {% if page_range[0] > 1 %}
                    <li><a href="{{ url_for('routes.list_data_sources', page=(page_range[0] - 1)) }}" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                {% endif %}
                {% for p in page_range %}
                    {% if p == page_num %}<li class="active">{% else %}<li>{% endif %}
                    <a href="{{ url_for('routes.list_data_sources', page=p) }}">{{ p }}</a></li>
                {% endfor %}
                {% if page_range[-1] < total_num_pages %}
                    <li><a href="{{ url_for('routes.list_data_sources', page=(page_range[-1] + 1)) }}" aria-label="Next"><span aria-hidden="true">&raquo;</span></a></li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}
{% else %}
    <p>No data sources found.</p>
{% endif %}

<p><a href="{{ url_for('routes.create_data_source') }}">Add New Data Source</a></p>
<p><a href="{{ url_for('routes.get_transformed_urls') }}">Find Alternate Data Sources</a></p>

{% endblock %}
