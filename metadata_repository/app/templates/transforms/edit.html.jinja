{% extends "authenticated.html.jinja" %}
{% import "form_macros.html.jinja" as form_macros %}

{% block page_header %}{{ from_data_source.label }} - Edit {{ transform.transform_type }} Transform{% endblock %}

{% block content %}

{{ form_macros.render_form(form, action_url=url_for("routes.edit_transform", source_id=from_data_source.id, transform_id=transform.transform_id), btn_class="btn btn-primary") }}

<hr>

<a href="{{ url_for('routes.show_transform', source_id=from_data_source.id, transform_id=transform.transform_id) }}" class="btn btn-default">Cancel</a>

{% endblock %}

{% block scripts %}

<script>
$('#transform_type').on('change', function(e) {

    var select = $(this);
    var module = select.val();

    $.ajax({
        url: "{{ url_for('routes.show_transform_options_form') }}",
        data: {
            "transform_type": module
        },
        dataType: "text",
        success: function(data) {
            var fieldset = $(data).find("fieldset");
            var group = select.closest(".form-group");
            group.next("fieldset").remove();
            fieldset.insertAfter(group);
        },
        error: function(err) {
            console.warn(err);
        }
    });

});
</script>

{% endblock %}
